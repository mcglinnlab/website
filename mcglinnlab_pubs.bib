	volume = {91},
	shorttitle = {A 12-year study on the scaling of vascular plant composition in an {Oklahoma} tallgrass prairie},
	url = {https://doi.org/10.1890/09-2017.1},
	doi = {10.1890/09-2017.1},
	abstract = {We present data that were collected as part of a monitoring project on vascular plant composition at the Tallgrass Prairie Preserve in Osage County, Oklahoma.  The purpose of these data are to promote the study of multi-scale patterns of species composition for both theoretical and applied questions.  Furthermore, these data will provide a reference point for tallgrass prairie restoration projects in the Flint Hills.  Over the course of the 12 year period, we sampled 20 permanent plots annually.  The permanent plots were selected semi-randomly from a UTM grid using the criteria that they contain less than 20 \% of woody cover, standing water, or exposed rock.  Plant species presence was recorded at five spatial scales: 0.01, 0.1, 1.0, 10, and 100 m2 in each of the four corners of a 100 m2 square quadrat.  Plant species were assigned to a percent cover class at the 100 m2 grain.  In addition to information on plant composition, we provide data on topography, soil variables, monthly total rainfall, monthly average temperature, and management records related to fire and grazing history.  We hope this dataset will simulate further research into the scaling of biodiversity and insight into the functioning and conservation of tallgrass prairie plant communities.},
	number = {6},
	journal = {Ecology},
	author = {McGlinn, Daniel J. and Earls, P.G. and Palmer, M.W.},
	year = {2010},
	keywords = {bison, Flint Hills, restoration, spatial scale, species-time-area relationship, tallgrass prairie, vascular plants, vegetation monitoring Ecological Archives E091-124},
	pages = {1872},
}

@article{mcglinn_effects_2010,
	title = {Effects of a tornado on birds in a {Cross} {Timbers} community},
	volume = {55},
	issn = {0038-4909},
	shorttitle = {Effects of a tornado on birds in a {Cross} {Timbers} community},
	url = {http://doi.org/10.1894/KF-09.1},
	doi = {10.1894/KF-09.1},
	abstract = {Tornados can influence forests by increasing openness of canopies and decreasing the frequency of large trees. These changes may indirectly influence the avian community; therefore, we
monitored birds in a Cross Timbers community that had recently experienced an F3 tornado. We surveyed the avian community 6 times during summer of 2 years. We performed surveys along three transects in the impacted site, a nearby non-impacted site, and a grassland. Species richness and composition were significantly different among habitats, but these differences were not related primarily to damage by the tornado. A partial canonical-correspondence analysis suggested that differences among habitats were due to species segregating between habitats with trees (impacted and non-impacted forests) and those without trees (grassland). It appeared that the avian community did not respond strongly to impact of the tornado. We suggest that avian communities in relatively open and patchy forests, such as the Cross Timbers, will not respond as strongly to localized disturbance from wind as will communities in more mesic, closed-canopy forests. Open woodlands lack adequate habitat for species that occupy interiors of forests; these species are expected to segregate the strongest between impacted and non-impacted sites.},
	number = {3},
	journal = {The Southwestern Naturalist},
	author = {McGlinn, Daniel J. and Churchwell, Roy T. and Palmer, Michael W.},
	year = {2010},
	pages = {460--466},
}

