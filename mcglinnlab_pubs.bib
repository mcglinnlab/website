	year = {2025},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ecs2.70061},
	keywords = {rarefaction, aggregation, scaling, species turnover, species-abundance distribution, sampling effects, patchiness},
