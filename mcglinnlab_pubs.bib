	keywords = {spatial scale, grain, geostatistics, C-score, co-occurrence, conspecific, heterospecific, interspecific, intraspecific, point process, semivariogram},
	pages = {e01452},
}

@article{engel_using_2021,
	title = {Using coverage-based rarefaction to infer non-random species distributions},
