	journal = {Ecological Indicators},
	author = {Hu, Bing and McGlinn, Daniel J. and Zhao, Xiuhai and von Gadow, Klaus and Zhang, Chunyu},
	month = jan,
	year = {2024},
	keywords = {Species richness, Species abundance distributions, Latitudinal diversity gradient, More-individuals hypothesis, Plant growth forms, Spatial clustering, Temperate forests},
	pages = {111528},
	file = {ScienceDirect Snapshot:C\:\\Users\\mcglinndj\\Dropbox\\zotero\\storage\\NYJLLFC8\\S1470160X23016709.html:text/html},
